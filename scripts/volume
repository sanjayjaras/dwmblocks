#!/bin/bash 
mute="$(amixer get Master|tail -1|awk '{print $6}')"
if [ "$mute" = "[off]" ]; then  
    echo "ðŸ”‡ M"
else
    vol="$(amixer get Master|tail -1|awk '{print $5}'|tr [ ' '|tr ] ' '|tr % ' ')"
    vol=$(($vol + 0))
    #echo "${vol}% "
    if [ $vol -lt 30 ]; then
        echo "ï€¦ ${vol}% "
    elif [ $vol -lt 60 ]; then
        echo "ï€§ ${vol}% "
    else
        echo "ï€¨ ${vol}% "
    fi
fi
